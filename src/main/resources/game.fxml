<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="900.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="chess.chessjavafx.javaFX.Game">
    <Button onAction="#goBack" text="Wróć" />
    <Pane prefHeight="850.0" prefWidth="850.0" styleClass="pane">
        <Pane fx:id="board" />
    </Pane>
    <VBox spacing="10.0">
        <Text fx:id="currentPlayerText" />
        <Text fx:id="checkText" />

        <Text fx:id="timerText" />
        <Text fx:id="timerWhiteText" />
        <Text fx:id="timerBlackText" />
        <Text fx:id="comTeamText" />
        <Text fx:id="comDifficultyText" />

        <TableView fx:id="tableView" prefHeight="433.0" prefWidth="214.0">
            <columns>
                <TableColumn fx:id="whiteCol" prefWidth="75.0" text="Biały" />
                <TableColumn fx:id="blackCol" prefWidth="75.0" text="Czarny" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <TextField fx:id="positionField" />
        <Button mnemonicParsing="false" onAction="#sendPickUp" text="Podnieś" />
        <Button mnemonicParsing="false" onAction="#sendPlace" text="Postaw" />
    </VBox>
    <Text fx:id="alarm" fill="RED" styleClass="alarm" text="COFNIJ DO POPRZEDNIEGO STANU" />
    <stylesheets>
    <URL value="@style.css" />
  </stylesheets>
</AnchorPane>
